<!-- form start  -->
<form method="POST" action="api/users" id="add-user">
    <div class="new-user">
        <div class="form-group">
            <label for="name" class="text-light">Name</label>
            <input type="hidden" name="id" value="">
            <input type="text" name="name">
        </div>
        <div class="form-group">
            <label for="email" class="text-light">Email</label>
            <input type="email" name="email">
        </div>
        <div class="form-group">
            <label for="gender" class="text-light">Gender</label>
            <div class="radio inline">
                <input type="radio" id="grm" name="gender" value="Male">
                <label for="grm" class="radio-label">Male</label>
            </div>
            <div class="radio inline">
                <input type="radio" id="grf" name="gender" value="Female">
                <label for="grf" class="radio-label">Female</label>
            </div>
        </div>
        <div class="form-group">
            <label for="status" class="text-light">Status</label>
            <div class="radio inline">
                <input type="radio" id="sra" name="status" value="Active">
                <label for="sra" class="radio-label">Active</label>
            </div>
            <div class="radio inline">
                <input type="radio" id="sri" name="status" value="Inactive">
                <label for="sri" class="radio-label">Inactive</label>
            </div>
        </div>
        <div class="form-group">
            <button type="submit" class="btn text-dark update" id="save">Save</button>
        </div>
    </div>
</form>
<!-- form end  -->